<h1>New Collection</h1>

<%= form_with scope: :collection, url: collections_path, local: true do |form| %>

  <% if @collection.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@collection.errors.count, "error") %>
        prohibited this collection from being saved:
      </h2>
      <ul>
        <% @collection.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :fandom %><br>
    <%= form.text_field :fandom %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<p><%= link_to 'Back', collections_path %></p>
