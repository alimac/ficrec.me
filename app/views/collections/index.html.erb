<h1>Collections</h1>

<p><%= link_to 'New collection', new_collection_path %></p>

<% if @collections.count > 0 %>

  <table>
    <tr>
      <th>Title</th>
      <th>Fandom</th>
    </tr>

    <% @collections.each do |collection| %>

      <tr>
        <td><%= collection.title %></td>
        <td><% if collection.fandom %><%= link_to collection.fandom.name, fandom_path(collection.fandom) %><% end %></td>
        <td><%= link_to 'Show', collection_path(collection) %></td>
        <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
        <td><%= link_to 'Delete', collection_path(collection),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>

<% else %>
  <p> No collections yet.</p>
<% end %>

<p><%= link_to 'Back', root_path %></p>
